<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/climbs/index.css" />
<link rel="stylesheet" href="/stylesheets/profiles/index.css">
<%- include('../partials/nav2') %>

<main class="main">
<div id="belayshionship">
  <h1>Got a belayshionship going on?</h1>
  <h3>Add your climbing partners to your climbing profile...and then passive-aggressively delete them if they short-rope you one-too-many times</h3>
  <h4><i>It's like your MySpace Top 8...but for climbing</i></h4>
</div>

  <div class="card-container" id="card-container">
    <% profiles.forEach(profile => { %>
      <a class="text-decoration-none" href="/profiles/<%= profile._id %>">
        <div class="card">
          <form 
            class="form-class"
            action="/profiles/<%= user.profile._id %>/addPartner?_method=PATCH" 
            method="POST" 
            name="addPartnerToList"
          >

            <input type="text" name="id" hidden value="<%= profile._id %>">
            <div>
              <button id="add-partner-btn" type="submit">Add Partner</button>
            </div>
          </form>
          <img 
            src="<%= profile.avatar %>" 
            alt="<%= profile.name %>'s avatar"
          >
          <div class="card-body">
            <h1 class="card-title"><%= profile.name %></h1>
          </div>
        </div>
      </a>
    <% }) %>
  </div>
</main>

<%- include('../partials/footer') %>